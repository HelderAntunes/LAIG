<dsx>

    <scene root="root" axis_length="3" />

    <views default="initView" >

        <perspective id="initView" near="0.1" far="500.0" angle="25">
            <from x="20" y="20.0" z="20.0" />
            <to x="0.0" y="0.0" z="0.0" />
        </perspective>

        <perspective id="view2" near="0.1" far="500.0" angle="25">
            <from x="60.0" y="40.0" z="0.0" />
            <to x="0.0" y="0.0" z="0.0" />
        </perspective>

        <perspective id="view3" near="0.1" far="500.0" angle="25">
            <from x="-60.0" y="40.0" z="0.0" />
            <to x="0.0" y="0.0" z="0.0" />
        </perspective>

    </views>

    <illumination doublesided="1" local="1" >

        <ambient r="0.4" g="0.4" b="0.4" a="1" />
        <background r="0" g="0" b="0" a="1" />

    </illumination>

    <lights>

        <omni id="omniLight" enabled="1" >
            <location x="5" y="5" z="0" w="1" />
            <ambient r="1.0" g="1" b="1" a="1.0" />
            <diffuse r="1.0" g="1" b="1" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
        </omni>

        <omni id="omniLight2" enabled="1" >
            <location x="-5" y="5" z="0" w="1" />
            <ambient r="1.0" g="1" b="1" a="1.0" />
            <diffuse r="1.0" g="1" b="1" a="1.0" />
            <specular r="1" g="1" b="1" a="1.0" />
        </omni>

        <spot id="spotLight" enabled="1" angle="2" exponent="100">
            <target x="3.5" y="2.5" z="0" />
            <location x="3.5" y="2.5" z="1.6" />
            <ambient r="1" g="0.2" b="0.2" a="1" />
            <diffuse r="1" g="0.2" b="0.2" a="1" />
            <specular r="1" g="0.2" b="0.2" a="1" />
        </spot>

    </lights>

    <textures>
        <texture id="floorText" file="scenes/repete.jpg" length_s="10" length_t="10" />
        <texture id="woodText" file="scenes/texture_wood.jpg" length_s="8" length_t="8" />
        <texture id="topTreeText" file="scenes/texture_topTree.jpg" length_s="8" length_t="8" />
        <texture id="streetText" file="scenes/texture_street.jpg" length_s="7" length_t="7" />
        <texture id="sandText" file="scenes/texture_sand.jpg" length_s="10" length_t="10" />
        <texture id="chessboardText" file="scenes/chessboard.jpg" length_s="1" length_t="1" />
    </textures>

    <materials>

        <material id="blueMat" >
            <emission r="0" g="0" b="1" a="1" />
            <ambient r="0" g="0" b="1" a="1" />
            <diffuse r="0" g="0" b="1" a="1" />
            <specular r="0" g="0" b="1" a="1" />
            <shininess value="1" />
        </material>

        <material id="default" >
            <emission r="0.1" g="0.1" b="0.1" a="1" />
            <ambient r="1" g="1" b="1" a="1" />
            <diffuse r="0.8" g="0.8" b="0.8" a="1" />
            <specular r="1" g="1" b="1" a="1" />
            <shininess value="0.5" />
        </material>

    </materials>

    <transformations>

        <transformation id="trans1">
           <translate x="1" y="1" z="1" />
           <rotate axis="x" angle="90" />
           <scale x="1" y="1" z="1" />
        </transformation>

        <transformation id="trans2">
            <rotate axis="y" angle="-90" />
        </transformation>

    </transformations>

    <!-- novo bloco de animacao -->
    <animations>
        <!-- podem existir zero ou mais nós "animation" -->
        <!-- span é o tempo, em segundos, que a animação deve -->
        <!-- demorar. Nesta versão do formato DSX, type pode ter -->
        <!-- o valor "linear" ou "circular"; na animacao circular -->
        <!-- os angulos sao expressos em graus  -->
        <animation id="animation1" span="2.5" type="linear">
            <controlpoint xx="-5" yy="0" zz="5" />
            <controlpoint xx="0" yy="0" zz="5" />
        </animation>

        <animation id="animation2" span="15.5" type="circular" centerx="0" centery="0" centerz="0"
        radius="5" startang="-90" rotang="360" />

        <animation id="animation3" span="3.6" type="linear">
            <controlpoint xx="-7" yy="0" zz="-5" />
            <controlpoint xx="-7" yy="0" zz="5" />
        </animation>

        <animation id="animation4" span="10" type="circular" centerx="0" centery="0" centerz="5"
        radius="7" startang="180" rotang="180" />

        <animation id="animation5" span="3.6" type="linear">
            <controlpoint xx="7" yy="0" zz="5" />
            <controlpoint xx="7" yy="0" zz="-5" />
        </animation>

        <animation id="animation6" span="18" type="linear">
            <controlpoint xx="0" yy="5" zz="10" />
            <controlpoint xx="0" yy="0" zz="-10" />
            <controlpoint xx="0" yy="5" zz="-20" />
        </animation>

     </animations>

    <primitives>

        <primitive id="Pfloor">
            <!-- <rectangle x1="-11" y1="-11" x2="11" y2="11" /> -->
            <triangle x1="-11" y1="-11" z1="0" x2="11" y2="-11" z2="0" x3="0" y3="11" z3="0" />
        </primitive>

        <primitive id="Ptronco">
            <cylinder base="0.3" top="0.3" height="2" slices="20" stacks="20" />
        </primitive>

        <primitive id="Pcopa">
            <cylinder base="0.8" top="0" height="2" slices="20" stacks="20" />
        </primitive>

        <primitive id="Pstreet">
            <rectangle x1="-3" y1="-5" x2="3" y2="5" />
        </primitive>

        <primitive id="PborderStreet">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="Ppilar">
            <cylinder base="0.5" top="0.5" height="5" slices="20" stacks="30" />
        </primitive>

        <primitive id="Ppilar2">
            <cylinder base="0.5" top="0.5" height="5.66" slices="20" stacks="30" />
        </primitive>

        <primitive id="Ppilar3">
            <sphere radius="0.5" slices="15" stacks="15" />
        </primitive>

        <primitive id="esferaCarro">
            <sphere radius="0.5" slices="15" stacks="15" />
        </primitive>

        <primitive id="rectangle1">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="tri1">
            <triangle x1="-1" y1="-1" z1="0" x2="1" y2="-1" z2="0" x3="0" y3="1" z3="0" />
        </primitive>

        <primitive id="torus1">
            <torus inner="1.75" outer="2" slices="20" loops="20" />
        </primitive>

        <primitive id="plane1">
            <plane dimX="4" dimY="2" partsX="10" partsY="5"/>
        </primitive>

        <primitive id="patch1">
            <patch orderU="2" orderV="3" partsU="50" partsV="50" >
                <controlpoint x="-2" y="-2" z="1" />
                <controlpoint x="-2" y="-1" z="-2" />
                <controlpoint x="-2" y="1" z="5" />
                <controlpoint x="-2" y="2" z="-1" />

                <controlpoint x="0" y="-2" z="0" />
                <controlpoint x="0" y="-1" z="-1" />
                <controlpoint x="0" y="1" z="1.5" />
                <controlpoint x="0" y="2" z="0" />

                <controlpoint x="2" y="-2" z="-1" />
                <controlpoint x="2" y="-1" z="2" />
                <controlpoint x="2" y="1" z="-5" />
                <controlpoint x="2" y="2" z="1" />
            </patch>
        </primitive>

        <primitive id="airplane">
            <vehicle />
        </primitive>

        <primitive id="chessboard">
            <chessboard du="8" dv="8" textureref="chessboardText" su="6" sv="5">
                   <c1 r="1" g="1" b="1" a="1" />
                   <c2 r="1" g="0.7" b="0" a="1" />
                   <cs r="0.5" g="0.25" b="0.12" a="1" />
            </chessboard>
        </primitive>

        <primitive id="chessboard2">
            <chessboard du="5" dv="5" textureref="chessboardText" su="3" sv="3">
                   <c1 r="0.2" g="0.2" b="0.2" a="1" />
                   <c2 r="1" g="0.7" b="0" a="1" />
                   <cs r="0.2" g="0.5" b="0.2" a="1" />
            </chessboard>
        </primitive>

    </primitives>

    <components>

        <component id="root" >

            <transformation>
                <translate x="0" y="0" z="0" />
            </transformation>

            <materials>
                <material id="default" />
            </materials>

            <texture id="none" />

            <children>
                <componentref id="templo" />
                <componentref id="templo2" />
                <componentref id="vehicle" />
                <componentref id="vehicle2" />
                <componentref id="vehicle3" />
                <componentref id="chessboard" />
                <componentref id="chessboard2" />
            </children>

        </component>

        <component id="chessboard" >

            <transformation>
                <rotate axis="x" angle="-90" />
                <scale x="20" y="20" z="20" />
            </transformation>

            <materials>
                <material id="default" />
            </materials>

            <texture id="none" />

            <children>
                <primitiveref id="chessboard" />
            </children>

        </component>

        <component id="chessboard2" >

            <transformation>
                <translate x="0" y="0" z="-20" />
                <rotate axis="x" angle="-90" />
                <scale x="20" y="20" z="20" />
            </transformation>

            <materials>
                <material id="default" />
            </materials>

            <texture id="none" />

            <children>
                <primitiveref id="chessboard2" />
            </children>

        </component>

        <component id="vehicle" >

            <transformation>
                <translate x="0" y="4" z="0" />
            </transformation>

            <animation>
                <animationref id="animation1" />
                <animationref id="animation2" />
            </animation>

            <materials>
                <material id="default" />
            </materials>

            <texture id="streetText" />

            <children>
                <primitiveref id="airplane" />
            </children>

        </component>

        <component id="vehicle2" >

            <transformation>
                <translate x="0" y="3" z="0" />
            </transformation>

            <animation>
                <animationref id="animation3" />
                <animationref id="animation4" />
                <animationref id="animation5" />
            </animation>

            <materials>
                <material id="default" />
            </materials>

            <texture id="streetText" />

            <children>
                <primitiveref id="airplane" />
            </children>

        </component>

        <component id="vehicle3" >

            <transformation>
                <translate x="0" y="2" z="0" />
            </transformation>

            <animation>
                <animationref id="animation6" />
            </animation>

            <materials>
                <material id="default" />
            </materials>

            <texture id="streetText" />

            <children>
                <primitiveref id="airplane" />
            </children>

        </component>

        <component id="templo" >

            <transformation>
                <translate x="0" y="0" z="-2" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="sandText" />

            <children>
                <componentref id="pilar1" />
                <componentref id="pilar2" />
                <componentref id="pilar3" />
                <componentref id="pilar4" />
                <componentref id="ponte1" />
                <componentref id="ponte2" />
                <componentref id="esferaEnvol1" />
                <componentref id="esferaEnvol2" />
                <componentref id="esferaEnvol3" />
                <componentref id="esferaEnvol4" />
            </children>

        </component>

        <component id="templo2" >

            <transformation>
                <translate x="0" y="0" z="-8" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="sandText" />

            <children>
                <componentref id="pilar1" />
                <componentref id="pilar2" />
                <componentref id="pilar3" />
                <componentref id="pilar4" />
                <componentref id="ponte1" />
                <componentref id="ponte2" />
                <componentref id="esferaEnvol1" />
                <componentref id="esferaEnvol2" />
                <componentref id="esferaEnvol3" />
                <componentref id="esferaEnvol4" />
            </children>

        </component>

        <component id="esferaEnvol1" >

            <transformation>
                <translate x="-2" y="5" z="-1" />
            </transformation>

            <materials>
                <material id="inherit" />
                <material id="blueMat" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="Ppilar3" />
            </children>

        </component>

        <component id="esferaEnvol2" >

            <transformation>
                <translate x="-2" y="5" z="-5" />
            </transformation>

            <materials>
                <material id="inherit" />
                <material id="blueMat" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="Ppilar3" />
            </children>

        </component>

        <component id="esferaEnvol3" >

            <transformation>
                <translate x="2" y="5" z="-5" />
            </transformation>

            <materials>
                <material id="inherit" />
                <material id="blueMat" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="Ppilar3" />
            </children>

        </component>

        <component id="esferaEnvol4" >

            <transformation>
                <translate x="2" y="5" z="-1" />
            </transformation>

            <materials>
                <material id="inherit" />
                <material id="blueMat" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="Ppilar3" />
            </children>

        </component>

        <component id="ponte1" >

            <transformation>
                <translate x="0" y="5" z="-3" />
				<rotate axis="y" angle="45" />
				<translate x="0" y="0" z="-2.825" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="Ppilar2" />
            </children>

        </component>

        <component id="ponte2" >

            <transformation>
                <translate x="0" y="5" z="-3" />
				<rotate axis="y" angle="-45" />
				<translate x="0" y="0" z="-2.825" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="Ppilar2" />
            </children>

        </component>

        <component id="pilar1" >

            <transformation>
                <translate x="-2" y="0" z="-1" />
				<rotate axis="x" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="Ppilar" />
            </children>

        </component>

        <component id="pilar2" >

            <transformation>
                <translate x="-2" y="0" z="-5" />
				<rotate axis="x" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="Ppilar" />
            </children>

        </component>

        <component id="pilar3" >

            <transformation>
                <translate x="2" y="0" z="-5" />
				<rotate axis="x" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="Ppilar" />
            </children>

        </component>

        <component id="pilar4" >

            <transformation>
                <translate x="2" y="0" z="-1" />
				<rotate axis="x" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="Ppilar" />
            </children>

        </component>

    </components>

</dsx>
